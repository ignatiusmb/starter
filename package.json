{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"format": "prettier -w . --plugin=prettier-plugin-svelte --plugin=prettier-plugin-sort-package-json",
		"check": "pnpm check:style && pnpm check:svelte",
		"check:style": "prettier -c . --plugin=prettier-plugin-svelte --plugin=prettier-plugin-sort-package-json",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
	},
	"packageManager": "pnpm@8.7.1",
	"prettier": "mauss/prettier.json",
	"devDependencies": {
		"@ignatiusmb/styles": "^0.1.1",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.24.0",
		"mauss": "^0.7.2",
		"prettier": "^3.0.3",
		"prettier-plugin-sort-package-json": "^0.2.0",
		"prettier-plugin-svelte": "^3.0.3",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.1",
		"syv": "^0.0.29",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	}
}
